	void loadJobs() {
		submitted_box.insertBefore(submitted_first, new Label("Hallo Wolrd!"));
	}
	]]>
	<![CDATA[
	//Other code, remove this if you don't need it
		String JOBS_DIR = "/home/h/huberste/gobi/webserver/jobs";
