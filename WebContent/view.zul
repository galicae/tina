<tabbox width="100%" onCreate="">
<tabs>
	<tab label="submitted"></tab>
	<tab label="in progress"></tab> 
	<tab label="done"></tab>
</tabs>
<tabpanels onCreate="loadJobs()">
	<tabpanel> <!-- submitted -->
		<vlayout id="submitted_box">
		<label id="submitted_first">Here you can see all jobs that have been submitted to tina but the server has not yet had the time for executing them.</label>
		</vlayout>
	</tabpanel>
	<tabpanel> <!-- in progress -->
		<vlayout id="progress_box">
		<label id="progress_first">Here you can see all the jobs that tina is working on at the moment.</label>
		</vlayout>
	</tabpanel>
	<tabpanel>
		<vlayout id="results_box"> <!-- done -->
		<label id="results_first">Here you can see all jobs that have been submitted, and tina has already calculated the results.</label>
		</vlayout>
	</tabpanel>
</tabpanels>
</tabbox>
</zk>